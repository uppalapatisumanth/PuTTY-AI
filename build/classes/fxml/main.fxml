<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" prefHeight="600.0" prefWidth="400.0" styleClass="main-panel" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.puttyai.ui.MainController">
    <children>
        <!-- Title Bar -->
        <HBox alignment="CENTER_RIGHT" styleClass="title-bar">
            <children>
                <Label text="PuTTY AI Assistant" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="minimizeButton" mnemonicParsing="false" styleClass="window-button" text="_" />
                <Button fx:id="closeButton" mnemonicParsing="false" styleClass="window-button" text="X" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
        
        <!-- Session Selection -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="PuTTY Session:">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="sessionComboBox" prefWidth="250.0" promptText="Select PuTTY Session" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        
        <!-- Session Output -->
        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Session Output:">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <TextArea fx:id="outputArea" editable="false" prefHeight="200.0" wrapText="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </TextArea>
            </children>
        </VBox>
        
        <!-- Question Input -->
        <VBox spacing="5.0">
            <children>
                <Label text="Ask a Question:">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="questionField" promptText="Type your question here..." HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="askButton" mnemonicParsing="false" text="Ask">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
        
        <!-- AI Answer -->
        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="AI Assistant Answer:">
                    <VBox.margin>
                        <Insets left="10.0" />
                    </VBox.margin>
                </Label>
                <TextArea fx:id="answerArea" editable="false" prefHeight="200.0" wrapText="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </TextArea>
            </children>
        </VBox>
    </children>
</VBox>